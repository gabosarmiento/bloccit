<%= simple_form_for [topic, post, comment], remote: true do |f| %>
  <% if comment.errors.any? %>
    <div class="alert alert-block">
      <h4>There are <%= pluralize(comment.errors.count, "error") %> errors.</h4>
      <ul>
        <% comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= control_group_tag(comment.errors[:body]) do %>
      <div class="controls">
        <%= f.label :body , 'Add your comment' %>
        <%= f.input :body , label: false, input_html: {rows: 4} %>
      </div>
  <% end %>
  <%= f.button :submit,'Save',:class => 'btn-primary' %>
<% end %>